{% extends 'template.html.twig' %}
{% block style %}
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <meta name="description" content="" />
  <meta name="author" content="" />
  <title>projets</title>
  <link rel="apple-touch-icon" sizes="76x76" href="{{ asset('assets_dashboard/img/apple-icon.png') }}">
  <link rel="icon" type="image/png" href="{{ asset('assets_dashboard/img/favicon.png') }}">
{% endblock %}
{% block content %}
  <div class="main-content position-relative max-height-vh-100 h-100 mb-2">
    <div class="container-fluid px-2 px-md-4">
      <div class="page-header min-height-300 border-radius-xl mt-4" style="background-image: url('https://images.unsplash.com/photo-1531512073830-ba890ca4eba2?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1920&q=80');">
        <span class="mask  bg-gradient-dark  opacity-6"></span>
      </div>
      <div class="card card-body mx-2 mx-md-2 mt-n6">
        <div class="row">
          <div class="row">
            <div class="col-12 mt-4">
              <div class="mb-5 ps-3">
                <h1 class="mb-1">Projects</h1>
              </div>
              <div class="row">
              {% for project in projects %}
                <div class="col-xl-4 col-md-6 mb-xl-0 mb-4 mt-2">
                  <div class="card card-blog card-plain">
                    <div class="card-header p-0 m-2">
                      <a class="d-block shadow-xl border-radius-xl">
                        <img src="{{ asset('uploads/brochures/' ~ project.image)}}" alt="img-blur-shadow" class="img-fluid shadow border-radius-lg" style="weidth: auto; height:15rem">
                      </a>
                    </div>
                    <div class="card-body p-3">
                      <p class="mb-0 text-sm">Titre du projet : </p>
                      <a href="javascript:;" style="color: rgb(222, 170, 14);">
                        <h5 style="color:rgb(222, 170, 14);">
                          {{project.name}}
                        </h5>
                      </a>
                      <p class="mb-4 text-sm">
                        {{project.description}}
                      </p>
                      <div class="d-flex align-items-center justify-content-center" style="gap:1rem">
                        <a href='{{path('app_project_showDetails',{id:project.id})}}'><button type="button" class="btn btn-outline-primary btn-sm mb-0" style="background-color:  #F6BB10; border-color:  #F6BB10; color: black;">Project members</button></a>
                        <a href='{{path('app_project_progress',{id:project.id})}}'><button type="button" class="btn btn-outline-primary btn-sm mb-0" style="background-color:  #F6BB10; border-color:  #F6BB10; color: black;">Project progress</button></a>
                        <div class="avatar-group mt-2">
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              {% endfor %}
                {% if(is_granted('ROLE_ADMIN')) %}
                <div class="col-xl-4 col-md-6 mb-xl-0 mb-4 mt-2">
                    <div class="card h-100 card-plain border">
                      <div class="card-body d-flex flex-column justify-content-center text-center">
                        <a href="{{path('app_project_add')}}">
                          <i class="fa fa-plus text-secondary mb-3"></i>
                          <h5 class=" text-secondary"> Nouveau projet </h5>
                        </a>
                      </div>
                    </div>
                  </div>
                </div>
              {% endif %}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}

{% block javascripts %}
  <script>
    var win = navigator.platform.indexOf('Win') > -1;
    if (win && document.querySelector('#sidenav-scrollbar')) {
      var options = {
        damping: '0.5'
      }
      Scrollbar.init(document.querySelector('#sidenav-scrollbar'), options);
    }
  </script>
{% endblock %}
