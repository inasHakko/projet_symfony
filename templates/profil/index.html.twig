{% extends 'template.html.twig' %}

{% block title %}<h1 class="mt-2">Bonjour {{profil.firstName}}!</h1>{% endblock %}

{% block style %}
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <meta name="description" content="" />
  <meta name="author" content="" />
  <title>Profil</title>
  <link rel="apple-touch-icon" sizes="76x76" href="{{ asset('assets_dashboard/img/apple-icon.png') }}">
  <link rel="icon" type="image/png" href="{{ asset('assets_dashboard/img/favicon.png') }}">
  <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Inter:300,400,500,600,700,900" />
  <!-- Nucleo Icons -->
  <link href="{{ asset('assets/css/nucleo-icons.css') }}" rel="stylesheet" />
  <link href="{{ asset('assets/css/nucleo-svg.css') }}" rel="stylesheet" />
  <!-- Font Awesome Icons -->
  <script src="https://kit.fontawesome.com/42d5adcbca.js" crossorigin="anonymous"></script>
  <!-- Material Icons -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@24,400,0,0" />
  <!-- CSS Files -->
  <link id="pagestyle" href="{{ asset('assets/css/material-dashboard.css?v=3.2.0') }}" rel="stylesheet" />
{% endblock %}

{% block content %}
  <section>
    <div class="container py-5">
      <a href="{{ path('app_edit_profil', {id: profil.id}) }}" class="btn btn-primary float-right">Edit Profil</a>
      <div class="row">
        <div class="col-lg-4">
          <div class="mb-4">
            <div class="card-body text-center">
              <img src="{{ asset('uploads/brochures/' ~ profil.image)}}" alt="avatar"
                class="rounded-circle img-fluid" style="width: 200px;height: 200px">
              <h5 class="my-3">{{profil.firstName}} {{profil.lastName}}</h5>
              <p class="text-muted mb-1">{{profil.job}}</p>
            </div>
          </div>
        </div>
        <div class="col-lg-8">
          <div class="card mb-4" style="border: 3px solid rgb(219, 219, 219);">
            <div class="card-body">
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0" style="font-weight:bold; color:black">Prénom</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0">{{profil.firstName}}</p>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0" style="font-weight:bold; color:black">Nom</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0">{{profil.lastName}}</p>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0" style="font-weight:bold; color:black">Email</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0">{{user.email}}</p>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0" style="font-weight:bold; color:black">Téléphone</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0">{{profil.phone}}</p>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0" style="font-weight:bold; color:black">Addresse</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0">{{profil.adress}}</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="card" style="border: 3px solid rgb(219, 219, 219);">
          <div class="row">
              <div class="row" >
                <div class="col-12 mt-4">
                  <div class="mb-5 ps-3">
                    <h4 style="font-weight:bold;">Projets</h4>
                  </div>
                  <div class="row">
                    {% for project in projects %}
                      <div class="col-xl-3 col-md-6 mb-xl-0 mb-4">
                        <div class="card card-blog card-plain">
                          <div class="card-header p-0 m-2">
                            <a class="d-block shadow-xl border-radius-xl">
                              <img src="{{ asset('uploads/brochures/' ~ project.image)}}" alt="img-blur-shadow" class="img-fluid shadow border-radius-lg" style="weidth: auto; height:13rem">
                            </a>
                          </div>
                          <div class="card-body p-3">
                            <p class="mb-0 text-sm">Titre du projet</p>
                            <a href="javascript:;">
                              <h5>
                                {{project.name}}
                              </h5>
                            </a>
                            <p class="mb-4 text-sm">
                              {{project.description}}
                            </p>
                            <div class="d-flex align-items-center justify-content-between">
                              <a  href="{{path('app_project_detaills', {id:project.id})}}">
                                  <button type="button" class="btn btn-outline-primary btn-sm mb-0">Projet & tâches</button>
                              </a>
                              <div class="avatar-group mt-2">
                              {% for member in project.getUsers()%}
                                <a href="javascript:;" class="avatar avatar-xs rounded-circle" data-bs-toggle="tooltip" data-bs-placement="bottom" title="{{member.firstName}}">
                                  <img alt="Image placeholder" src="{{ asset('uploads/brochures/' ~ member.image)}}" style="border-radius:50%;height:30px; width:30px;">
                                </a>
                              {% endfor %}
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    {% endfor %}
                  </div>
                </div>
              </div>
            </div>
            </div>
        </div>
      </div>
  </section>
{% endblock %}
